---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

import { getPortfolioItems } from "../../utils/portfolioItems";
const content = await getPortfolioItems();
const project = content.contentPieces;

const title = SITE_TITLE + " - Portfolio";
const permalink = `${Astro.site}blog`;
---

<BaseLayout
  title={title}
  description={SITE_DESCRIPTION}
  permalink={permalink}
  current="portfolio"
>
  <div class="container">
    <h1>My Portfolio</h1>
    <div class="project-cards">
    {
      project.map((project, index) => {
        const href = `/portfolio/${project.slug}`;
        let date = ""
        if (Date.parse(project.date)) {
          date = "â€” " + new Date(project.date).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        };
        return (
            <div class="project-card">
              <img
                src={project.coverUrl}
                alt={project.title}
              />
              <h2>
                <a href={href}>{project.title}</a>
              </h2>
              <div class="project-card-footer">
                <span class="project-card-date">{date}</span>
              </div>
            </div>
        );
      })
    }
  </div>
</div>
</BaseLayout>

<style>
.project-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  .project-card {
    position: relative;
    background-color: var(--background-body);
    border-color: var(--border-card);
    border-radius: 0.5rem;
    border: var(--border-card) solid 10px);
    box-shadow: 0 0.25rem 0.5rem var(--card-dropShadow);
    padding: 1rem;
    margin-bottom: 1rem;
    transition: box-shadow 0.2s ease-in-out;
    transition: transform 0.2s ease-in-out;
  }

  .project-card:hover {
    box-shadow: 0 0.5rem 1rem var(--card-dropShadow-hover);
    transform: scale(1.05);
  }
  .project-card h2 {
    margin: 0;
    text-align: center;
    z-index: 3;
    text-overflow: ellipsis;
    overflow: hidden;
    z-index: 2;
  }
  .project-card img {
    position: relative;
    max-width: 100%;
    display: block;
    margin 0 auto;
    z-index: 0;
  }
  .project-card-footer {
    margin-top: 1rem;
    z-index: 3;
  }

  .project-card-date {
    font-size: 0.875rem;
    color: var(--text-secondary);
    z-index: 1;
  }
</style>
