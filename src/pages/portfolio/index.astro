---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../../consts";

import { PortfolioItems } from "../../utils/portfolioItems";
const content = await PortfolioItems.getPortfolioItems();
const project = content.contentPieces;

const title = SITE_TITLE + " - Portfolio";
const permalink = `${Astro.site}blog`;
---

<BaseLayout
  title={title}
  description={SITE_DESCRIPTION}
  permalink={permalink}
  current="portfolio"
>
  <div class="container">
    <h1>My Portfolio</h1>
    <div class="project-cards">
    {
      project.map((project, index) => {
        const href = `/portfolio/${project.slug}`;
        let date = ""
        if (Date.parse(project.date)) {
          date = "â€” " + new Date(project.date).toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        };
        return (
            <div class="project-card">
              <div class="project-card-overlay"></div>
              <img
                src={project.coverUrl}
                alt={project.title}
              />
              <h2>
                <a href={href}>{project.title}</a>
              </h2>
              <div class="project-card-footer">
                <span class="project-card-date">{date}</span>
              </div>
            </div>
        );
      })
    }
  </div>
</div>
</BaseLayout>

<style>
.project-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    grid-gap: 1rem;
    justify-content: center;
    align-items: center;
  }

  .project-card {
    position: relative;
    background-color: var(--background-body);
    border-color: var(--border-card);
    border-radius: 0.5rem;
    border: var(--border-card) solid 10px);
    box-shadow: 0 0.25rem 0.5rem rgba(255, 255, 255, 0.2);
    padding: 1rem;
    margin-bottom: 1rem;
    transition: box-shadow 0.2s ease-in-out;
  }

  .project-card:hover {
    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.2);
  }

  .project-card-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* background-color: rgba(255, 255, 255, 0.5); */
    backdrop-filter: blur(0.3rem);
    z-index: 1;
    transition: backdrop-filter 0.2s ease-in-out;
    /* transition: background-color 0.2s ease-in-out; */
  }

  .project-card-overlay:hover {
    backdrop-filter: blur(0rem);
    /* background-color: rgba(255, 255, 255, 0.4); */
  }

  .project-card h2 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    margin: 0;
    text-align: center;
    z-index: 3;
    text-overflow: ellipsis;
    overflow: hidden;
  }
  .project-card img {
    position: relative;
    max-width: 100%;
    display: block;
    margin 0 auto;
    z-index: 0;
  }
  .project-card-footer {
    margin-top: 1rem;
    z-index: 3;
  }

  .project-card-date {
    font-size: 0.875rem;
    color: var(--text-secondary);
    z-index: 1;
  }
</style>
